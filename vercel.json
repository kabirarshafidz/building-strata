{
  "framework": "nextjs",
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install",
  "devCommand": "pnpm run dev",
  "outputDirectory": ".next",
  "regions": ["sin1"],
  "crons": [
    {
      "path": "/api/cron/daily-maintenance",
      "schedule": "* /5 * * *"
    },
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "* /5 * * *"
    }
  ]
}
