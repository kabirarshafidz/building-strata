{
  "version": 2,
  "regions": ["sin1", "sfo1", "iad1"],
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/daily-maintenance",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "0 0 * * 0"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "silent": true,
    "autoAlias": true
  }
}
